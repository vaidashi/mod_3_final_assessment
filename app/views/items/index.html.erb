<div class="form-group search-field">
  <%= form_tag :search, method: :get, class: "form-inline" do %>
  <%= text_field_tag :search_box, "Enter a Valid Zip...", class: "form-control" %>
  <%= submit_tag "search", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>
